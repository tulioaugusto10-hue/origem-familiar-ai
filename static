<script>
const API_BASE = "https://origem-familiar-ai.onrender.com";

document.getElementById("form-origem").addEventListener("submit", async (e) => {
  e.preventDefault();

  const pais = document.getElementById("historia").value;
  const sobrenomes = document.getElementById("nomes").value;
  const foto = document.getElementById("foto").files[0];

  const resultadoDiv = document.getElementById("resultado");
  resultadoDiv.style.display = "block";
  resultadoDiv.innerText = "üîç Analisando dados hist√≥ricos...\n";

  // ===============================
  // BUSCAR ORIGEM HIST√ìRICA
  // ===============================
  const resposta = await fetch(`${API_BASE}/buscar-origem`, {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({
      pais_suspeito: pais,
      sobrenomes: sobrenomes
    })
  });

  const dados = await resposta.json();

  let texto = "üß¨ RESULTADO DA AN√ÅLISE\n\n";
  texto += dados.resumo || "Nenhum dado encontrado.";
  texto += "\n\n";

  // ===============================
  // PROCESSAR FOTO (SE ENVIADA)
  // ===============================
  if (foto) {
    texto += "üì∏ Processando imagem...\n";

    const formData = new FormData();
    formData.append("foto", foto);

    const respFoto = await fetch(`${API_BASE}/processar-foto`, {
      method: "POST",
      body: formData
    });

    const dadosFoto = await respFoto.json();
    texto += `Imagem analisada com sucesso.\n`;
  }

  resultadoDiv.innerText = texto;
});
</script>

